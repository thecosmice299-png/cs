#include <stdio.h>

int main() {
    int n, num, index = -1;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[100]; // Assume max 100 elements
    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter the element to delete: ");
    scanf("%d", &num);

    // Search for element
    for (int i = 0; i < n; i++) {
        if (arr[i] == num) {
            index = i;
            break;
        }
    }

    if (index == -1) {
        printf("\nElement not found in the array.\n");
        return 1;
    }

    // Shift elements to the left
    for (int i = index; i < n - 1; i++) {
        arr[i] = arr[i + 1];
    }
    n--; // Reduce size

    printf("\nArray after deletion:\n");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    return 0;
}
